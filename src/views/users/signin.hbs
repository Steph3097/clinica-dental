<div class="columns">
    <div class="column is-flex signin-column">
        <h1>Ingresa a la aplicacion</h1>
        <form action="/users/signin" method="POST" class="signin-form">
        <div class="field">
            <p class="control has-icons-left has-icons-right">
                <input class="input" type="email" name="email" placeholder="Correo">
                <span class="icon is-small is-left">
                    <i class="fas fa-envelope"></i>
                </span>
            </p>
        </div>
        <div class="field">
            <p class="control has-icons-left">
                <input class="input" type="password" name="password" placeholder="Contrasena">
                <span class="icon is-small is-left">
                    <i class="fas fa-lock"></i>
                </span>
            </p>
        </div>
        <div class="field">
            <div class="button-submit-container">
                <button class="button-loading" type="submit">
                   <span>Ingresar</span> 
                </button>
            </div>
        </div>
        </form>
        <a class="no-registrado-link" href="/users/signup">Aún no estás registrado? Registrate!</a>
    </div>

</div>