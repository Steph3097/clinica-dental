<div class="column">
  <div class="columns card-column">
    <div class="card">
      <header class="card-header">
        <p class="card-header-title">Registro de usuarios</p>
      </header>
      <div class="card-content">
        <form action="/users/signup" method="POST">
          <div class="field">
            <div class="control">
              <p>Nombre:</p>
              <input type="text" class="input is-primary " name="name" placeholder="Ingrese su Usuario" value="{{name}}">
            </div>
          </div>
          <div class="field">
            <div class="control">
              <p>Correo electrónico:</p>

              <input type="email" class="input is-primary " name="email" placeholder="Ingrese su Correo" value="{{email}}">
            </div>
          </div>
          <div class="field">
                          <p>Contraseña:</p>

            <div class="control">

              <input type="password" class="input is-primary " name="password" placeholder="Ingrese su Contrasena" value="{{password}}">
            </div>
          </div>
          <div class="field">
            <div class="control">
              <p>Confirme su contraseña:</p>

              <input type="password" class="input is-primary " name="confirm_password" placeholder="Reingrese su Contrasena"
                value="{{confirm_password}}">
            </div>
            <div class="field field-userType mt-4">
              <div class="control">
                <p>Seleccione el tipo de usuario:</p>
                <label class="radio">
                  <input type="radio" name="type_user" value="administrador">
                  Administrador
                </label>
                <label class="radio">
                  <input type="radio" name="type_user" value="Secretaria" checked="checked">
                  Secretaria
                </label>
                <label class="radio">
                  <input type="radio" name="type_user" value="Dentista">
                  Dentista
                </label>
              </div>
            </div>
  <div class="field button-field mt-5">
            <button class="button-loading" type="submit">Guardar</button>
            </div>
        </form>
      </div>
    </div>
  </div>

</div>