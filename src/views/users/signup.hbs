<div class="column">
  <div class="columns">
    <div class="card">
      <header class="card-header">
        <p class="card-header-title">Registro de usuarios</p>
      </header>
      <div class="card-content">
        <form action="/users/signup" method="POST">
          <div class="field">
            <div class="control">
              <input type="text" class=" " name="name" placeholder="Ingrese su Usuario" value="{{name}}">
            </div>
          </div>
          <div class="field">
            <div class="control">
              <input type="email" class=" " name="email" placeholder="Ingrese su Correo" value="{{email}}">
            </div>
          </div>
          <div class="field">
            <div class="control">
              <input type="password" class=" " name="password" placeholder="Ingrese su Contrasena" value="{{password}}">
            </div>
          </div>
          <div class="field">
            <div class="control">
              <input type="password" class=" " name="confirm_password" placeholder="Reingrese su Contrasena"
                value="{{confirm_password}}">
            </div>
            <div class="field">
              <div class="control">
                <label class="radio">
                  <input type="radio" name="type_user" value="administrador">
                  Administrador
                </label>
                <label class="radio">
                  <input type="radio" name="type_user" value="Secretaria" checked="checked">
                  Secretaria
                </label>
                 <label class="radio">
                  <input type="radio" name="type_user" value="Dentista">
                  Dentista
                </label>
              </div>
            </div>

            <button class="button is-primary" type="submit">Ingresar</button>
        </form>
      </div>
    </div>
  </div>

</div>